    <h1>Mystery Door Game</h1>
    <h2>Choose a door:</h2>
    <button class="button" onclick="choose('left')">Left Door</button>
    <button class="button" onclick="choose('right')">Right Door</button>

    <div id="result"></div>

    <script>
        function choose(door) {
            if (door == 'left') {
                document.getElementById("result").innerHTML = "You found the treasure; great work";
            } else {
                document.getElementById("result").innerHTML = "Oh no; there is nothing here! ðŸ˜±";
            }
        }
    </script>
